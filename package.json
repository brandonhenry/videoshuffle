{
  "name": "videoshuffle",
  "version": "1.0.5",
  "description": "A simple Electron app for video shuffling",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-reload": "*",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  },
  "author": "",
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^25.9.8"
  },
  "build": {
    "appId": "com.example.videoshuffle",
    "productName": "VideoShuffle",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "brandonhenry",
        "repo": "videoshuffle"
      }
    ]
  }
}
