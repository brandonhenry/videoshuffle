{
  "name": "videoshuffle",
  "version": "1.0.13",
  "description": "A simple Electron app for video shuffling",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "gh workflow run \"Build & Publish\" --ref main",
    "tag": "npm version patch && git push origin main --follow-tags"
  },
  "dependencies": {
    "electron-reload": "*",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "ffprobe-static": "^3.1.0"
  },
  "author": "",
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.videoshuffle",
    "productName": "VideoShuffle",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "brandonhenry",
        "repo": "videoshuffle"
      }
    ]
  }
}
